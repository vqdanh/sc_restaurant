
<div class="container">
  <%= form_with(model: food, local: true) do |form| %>
    <% if food.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

        <ul>
        <% food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :food_title, :class => "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :description %>
      <%= form.text_area :description, id: :food_description, :class => "form-control" %>
    </div>
    
    <div class="form-group field">
      <%= form.label :price %>
      <%= form.text_field :price, id: :food_price, :class => "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :url %>
      <%= form.text_field :url, id: :food_url, :class => "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :view_count %>
      <%= form.text_field :view_count, id: :food_view_count, :class => "form-control" %>
    </div>

    <div class="form-group field">
      <%= form.label :menu_id %>
      <%= form.select :menu_id, options_from_collection_for_select(Menu.all, :id, :title, @food.menu_id), {}, {:class => "form-control"}%>
    </div>

    <div>
      <%= form.submit :class => "btn btn-primary"%>
    </div>
  <% end %>
</div>
